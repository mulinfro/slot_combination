temp_操作1=关闭|停掉|关掉 => ("关闭");
temp_操作2=停止|停下|暂停 => ("暂停");
temp_操作=${temp_操作1}|${temp_操作2};
export stop_1=(${music_相对时间})(后|之后)(我)?(不要|不想|不用)(听|播|播放|放)(音乐|歌|歌曲)(了)?$ => request(时间_相对="$1",操作="暂停") <0.6>;
export stop_2=(${music_相对时间})(后|之后)(${temp_操作})(音乐|音乐播放器|播放器|音乐播放|播放音乐|播音乐)$ => request(时间_相对="$1",操作="$3") <0.6>;
export stop_3=^(${句首修饰词})?(${music_相对时间})(后|之后)(${temp_操作})(音乐|音乐播放器|播放器|音乐播放|播放音乐|播音乐)(${语气词})?$ => request(时间_相对="$1",操作="$4",歌曲名="@") <0.61>;
